{
  "name": "soskworkshop",
  "displayName": "SoSkWorkshop",
  "description": "",
  "version": "0.0.1",
  "icon": "./img/pomodoro.png",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": ["*"],
  "main": "./out/extension.js",
  "contributes": {
     "commands": [
            {
                "command": "soskworkshop.toggleTimer",
                "title": "Toggle Timer"
            }
     ],
     "configuration": {
            "title": "Pomodoro",
            "properties": {
                "pomodoro.workDuration": {
                    "type": "number",
                    "default": 25,
                    "description": "Work duration in minutes"
                },
                "pomodoro.breakDuration": {
                    "type": "number",
                    "default": 5,
                    "description": "Break duration in minutes"
                }
            }
        }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/huether/SoSkWorkshop"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.96.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "eslint": "^9.16.0",
    "typescript": "^5.7.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
